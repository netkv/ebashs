function update-menuline-menu {
	declare -Ag menufancy
	for item in "${!menulineedit[@]}"; do
		menufancy+=(["$(printf '%-12s' "$item")"]="${menulineedit["$item"]}")
	done
	menufancy+=([Quit        ]=quit)
}
update-menuline-menu
## charmap
