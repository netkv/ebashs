	[Keys]=menukey	    [Redraw]=refresh
	[Debug]=menudebug
)
function menufile { declare -ng menucon=menufile; menu; }
menufile=(
	[Quit       C-x C-c ]="quit"
	[Visit file C-x C-f ]="find-file"
	[Execute        C-t ]="execute"
	[Save       C-x C-s ]="write-buffer"
	[File picker        ]="dired"
)

